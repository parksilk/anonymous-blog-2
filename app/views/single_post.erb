<p>Title: <%= @post.title%></p>
<p>by: <a href=""><%= @post.author%></p></a>
<p>Post: <%= @post.body%></p>

<% unless @tags.empty? %>
    <h5>Tags:</h5>
    <ul>
    <% @tags.each do |tag| %>
      <li><a href='/tags/<%= tag.name %>'><%= tag.name %></a></li>
    <% end %>
    </ul>
<% else %>
    <h6>No tags.</h6>
<% end %>

Posted: <%= time_in_words(@post.created_at) %> at <%= @post.post_time %>
<br>
<br>
<a class='btn-delete' href="/posts/delete/<%= @post.id %>">Delete post</a>